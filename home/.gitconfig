[user]
	name = giankd
	email = giankd@gmail.com

[core]
	; excludesfile = ~/.gitignore
	pager = delta
	editor = vim

[pull]
	rebase = true

[alias]
	l = log -p
	graph = log --oneline --graph --all

; GHQ
[ghq]
    root = ~/repos

[interactive]
	diffFilter = delta --color-only --features=interactive

[delta]
	line-numbers = true
	features = decorations
	side-by-side = true
    navigate = true  # use n and N to move between diff sections

[delta "interactive"]
	keep-plus-minus-markers = false

[delta "decorations"]
	commit-decoration-style = blue ol
	syntax-theme = Nord

; [includeIf "gitdir:~/Documents/Workspaces/Personal/"]
;   path = ~/Documents/Workspaces/Personal/.gitconfig
;
; [includeIf "gitdir:~/Documents/Workspaces/SH/"]
;   path = ~/Documents/Workspaces/SH/.gitconfig

[init]
	defaultBranch = main

; difftastic
[diff]
    tool = difftastic
